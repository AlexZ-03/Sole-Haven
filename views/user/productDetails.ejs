<script>
    function changeMainImage(imageSrc) {
        document.getElementById('mainImage').src = imageSrc;
    }

    function changeMainImage(imageSrc) {
        document.getElementById('mainImage').src = imageSrc;
        // Update the zoomed image source
        document.getElementById('zoomImage').src = imageSrc;
    }

    // Mouse hover event for zoom effect
    const mainImage = document.getElementById('mainImage');
    const zoomContainer = document.getElementById('zoomContainer');
    const zoomImage = document.getElementById('zoomImage');

    mainImage.addEventListener('mouseenter', () => {
        zoomContainer.style.display = 'block';  // Show the zoom container
    });

    mainImage.addEventListener('mousemove', (e) => {
        // Get the position of the mouse relative to the main image
        const { left, top, width, height } = mainImage.getBoundingClientRect();
        const offsetX = e.clientX - left;
        const offsetY = e.clientY - top;

        // Calculate the scale of the zoomed image
        const scaleX = (offsetX / width) * 110;
        const scaleY = (offsetY / height) * 110;

        // Position the zoomed image within the zoom container
        zoomImage.style.transform = `scale(2) translate(-${scaleX}%, -${scaleY}%)`;
    });

    mainImage.addEventListener('mouseleave', () => {
        zoomContainer.style.display = 'none';  // Hide the zoom container
    });
</script>







