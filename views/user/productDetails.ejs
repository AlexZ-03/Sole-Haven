/* Zoom Container Styling */
.zoom-container {
    display: none;
    position: absolute;
    top: 0;
    left: 100%;
    width: 300px;
    height: 300px;
    overflow: hidden;
    border: 1px solid #ccc;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    z-index: 10;
}

#zoomImage {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transform-origin: center center;
    transition: transform 0.2s ease;
}

