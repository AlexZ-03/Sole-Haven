    <script>
        function changeMainImage(imageSrc) {
            document.getElementById('mainImage').src = imageSrc;
            // Update the zoomed image source
            document.getElementById('zoomImage').src = imageSrc;
        }

        function changeMainImage(imageSrc) {
        document.getElementById('mainImage').src = imageSrc;
        document.getElementById('zoomImage').src = imageSrc;
    }

        // Variables for main image and zoom
        const mainImage = document.getElementById('mainImage');
        const zoomContainer = document.getElementById('zoomContainer');
        const zoomImage = document.getElementById('zoomImage');

        // Show the zoom container on mouse enter
        mainImage.addEventListener('mouseenter', () => {
            zoomContainer.style.display = 'block';
        });

        mainImage.addEventListener('mousemove', (e) => {
            const rect = mainImage.getBoundingClientRect();

            // Calculate mouse position relative to the main image
            const offsetX = e.clientX - rect.left;
            const offsetY = e.clientY - rect.top;

            // Calculate the percentage position of the mouse within the image
            const percentageX = (offsetX / rect.width) * 100;
            const percentageY = (offsetY / rect.height) * 100;

            // Adjust zoomImage position to follow the mouse with correct centering
            zoomImage.style.transform = `translate(-${percentageX}%, -${percentageY}%) scale(2)`;
        });

        mainImage.addEventListener('mouseleave', () => {
            zoomContainer.style.display = 'none';
        });

        function addToCart(productId, quantity) {
        fetch(`/addTocart?productId=${productId}&quantity=${quantity}`)
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        title: "Added to Cart",
                        text: data.message,
                        icon: "success",
                        timer: 1500,
                        showConfirmButton: false
                    }).then(() => {
                        window.location.href = '/cart';
                    });
                } else {
                    Swal.fire("Error", "Something went wrong!", "error");
                }
            })
            .catch(error => {
                console.error("Error:", error);
                Swal.fire("Error", "There was an issue with adding the product to the cart.", "error");
            });
    }
    </script>







