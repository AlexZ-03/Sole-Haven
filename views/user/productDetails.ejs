    <style>
        .detail-gallery .product-image-slider {
        width: 450px;
        height: 450px;
        overflow: hidden; 
        margin: 0 auto; 
    }

    .detail-gallery .product-image-slider img {
        width: 100%; 
        height: 100%; 
        object-fit: cover;
    }

    .detail-gallery {
        position: relative;
    }

    .zoom-icon {
        position: absolute;
        top: 15px;
        right: 15px;
        z-index: 2;
    }

    .product-image-slider {
        position: relative;
    }

    .product-image-slider img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        cursor: zoom-in;
    }

    /* Zoom Container Styling */
    .zoom-container {
        display: none;
        position: absolute;
        top: 0;
        left: 110%;
        width: 300px;
        height: 300px;
        overflow: hidden;
        border: 1px solid #ccc;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        z-index: 10;
    }

    #zoomImage {
        position: absolute;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transform-origin: top left;
        transition: transform 0.2s ease;
    }

    /* Optional: Add hover effect for thumbnails */
    .slider-nav-thumbnails .slick-slide {
        opacity: 0.5;
        position: relative;
    }

    .slider-nav-thumbnails .slick-slide.slick-current {
        opacity: 1;
    }

    .slider-nav-thumbnails .slick-slide.slick-current img {
        border: 2px solid #a2d2c9;
    }

    .slider-nav-thumbnails div.slick-slide {
        margin: 0 3px;
    }

    .product-rating-section {
        margin: 20px 0;
    }

    .reviews {
        margin-top: 15px;
    }

    .review {
        background: #f9f9f9;
        padding: 10px;
        border-radius: 5px;
    }

    .submit-review-section {
        margin-top: 25px;
        padding: 15px;
        background: #f4f4f4;
        border-radius: 8px;
    }

